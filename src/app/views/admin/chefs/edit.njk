{% extends "../layout.njk" %}

{% block content %}
<form action="/admin/chefs?_method=PUT" method="POST" class="card">

  <div class="title-edit">
    <h1>Editar Chef</h1>
    <div class="buttons">
      <button type="submit" form="form-delete">Deletar</button>
      <button type="submit">Salvar Chef</button>
    </div>
  </div>

    {% include 'admin/chefs/fields.njk'%}

  <input type="hidden" name="id" value="{{ chef.id }}"> 
  
</form>


<form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">

  <input type="hidden" name="id" value="{{ chef.id }}">

</form>

{% endblock %}

