{% extends "../layout.njk" %}

{% block content %}
  <main>
    <div class="title">
      <h1>Gerenciar Chefs</h1>
    </div>

    <div class="card_chefs">
      {% for chef in chefs %}
        <div class="chef">
          <div class="image_chef" id="{{ chef.id }}">
            <img src="{{ chef.avatar_url }}" alt="">
          </div>
          <div class="info_chef">
            <p>{{ chef.name }}</p>
            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor%}
    </div>
  </main>
{% endblock %}