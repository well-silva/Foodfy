{% extends "../layout.njk" %}

{% block content %}
<main>
  <div class="card">
    <div class="title">
      <h1>Chef: {{ chef.name}} </h1>
      <a href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a>
    </div>

    <div class="info-chef">
      <div class="image-content-chef">
        <img src="{{ chef.avatar_url }}" alt="">
      </div>
      <div class="name-chef">
        <h1>{{ chef.name }}</h1>
        <span> {{chef.total_recipes}} receitas</span>
      </div>
    </div>

    <div class="recipes_chef">
      <h2>Receitas</h2>
      <div class="card_recipes">

        {% for recipe in recipes %}
          <div class="card-recipe">
            <div class="content_image_recipe">
              <img src="{{ recipe.image }}" alt="">
            </div>
            <div class="content_info">
              <p>{{ recipe.title }}</p>
              <p>por {{chef.name}}</p>
              <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>
</main>
{% endblock %}
